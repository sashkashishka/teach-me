{
  "include": [
    "packages/front/src/**/*"
  ],
  "exclude": ["node_modules", ".cache", "public"],
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "noUnusedLocals": true
  }
}
